@model Biblioteka_Gier_Planszowych.Models.Uzytkownik
@{
    ViewData["Title"] = "Logowanie";
}
<div id="hajeden">
<h1>Nowy Użytkownik</h1>
</div>

<div id="formbox">
<form action="/Uzytkownik/Login" method="post">
    <div class="form-group">
        <label asp-for="Login" class="control-label">Login: </label>
        <input asp-for="Login" class="form-control" />
        <span asp-validation-for="Login" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Haslo" class="control-label">Hasło: </label>
        <input asp-for="Haslo" class="form-control" />
        <span asp-validation-for="Haslo" class="text-danger"></span>
    </div>
        <div id="separator">
        </div>
    <div class="form-group">
        <input type="submit" value="Zaloguj się" class="btn btn-primary" />
    </div>
</form>

</div>


@ViewBag.message