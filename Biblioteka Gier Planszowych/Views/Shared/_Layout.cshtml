@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor
@{
    string sesjaUzytkownik = HttpContextAccessor.HttpContext.Session.GetString("UserId");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Biblioteka_Gier_Planszowych</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
</head>
<body>
  <div id="wrapper">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Biblioteka_Gier_Planszowych</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item buton">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Strona Główna</a>
                        </li>
                        @if (sesjaUzytkownik == null)
                        {
                            <li class="nav-item buton">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Uzytkownik" asp-action="NowyUzytkownik">Nowy Użytkownik</a>
                            </li>
                            <li class="nav-item buton">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Uzytkownik" asp-action="Login">Logowanie</a>
                            </li>
                        } else
                        {
                            <li class="nav-item buton">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Biblioteka" asp-action="Biblioteka">Biblioteka Gier</a>
                            </li>
                            <li class="nav-item buton">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Uzytkownik" asp-action="Wyloguj">Wyloguj</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>




    <div class="container">
   
        <main role="main" class="pb-3">
            @RenderBody()
        </main>

    
    </div>

    </div>
    
    <footer>
      
            &copy; 2022 - Biblioteka_Gier_Planszowych
   
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
