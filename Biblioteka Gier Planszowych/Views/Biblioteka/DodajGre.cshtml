@model Biblioteka_Gier_Planszowych.Models.Gra_Planszowa

@{
    ViewData["Title"] = "Dodaj Gre";
}
<div id="hajeden">
<h1>Dodaj swoją grę planszową</h1>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="DodajGre">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Tytuł" class="control-label"></label>
                <input asp-for="Tytuł" class="form-control" />
                <span asp-validation-for="Tytuł" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Wydawca" class="control-label"></label>
                <input asp-for="Wydawca" class="form-control" />
                <span asp-validation-for="Wydawca" class="text-danger"></span>
            </div>
                <div id="separator">
                  </div>
            <div class="form-group">
                <label asp-for="Gatunek" class="control-label"></label>
                <select asp-for="Gatunek">
                    <option value="Strategiczna">Strategiczna</option>
                    <option value="Przygodowa">Przygodowa</option>
                    <option value="Imprezowa">Imprezowa</option>
                    <option value="Rodzinna">Rodzinna</option>
                    <option value="Dla Dzieci">Dla Dzieci</option>
                    </select>

                <span asp-validation-for="Gatunek" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Opis" class="control-label"></label>
                <input asp-for="Opis" class="form-control" />
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>
          <div id="separator">
        </div>          
            <div class="form-group">
                <input type="submit" value="Dodaj Grę" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
        <div id="separator">
        </div>
<div>
    <a asp-action="Biblioteka">Wróć do Biblioteki</a>
</div>

